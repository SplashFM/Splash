.avatar
  %h2
    = t('.title')

  .image
    %p
      = image_tag current_user.avatar_url(:large), :id => 'cropbox', :class => 'fancybox_avatar'

    #image-attrs{:"data-large-width" => current_user.avatar_geometry(:large).width, :"data-large-height" => current_user.avatar_geometry(:large).height, :"data-original-width" => current_user.avatar_geometry(:original).width, :style => 'display:none;' }

    = form_for current_user, :remote => true, :id => 'crop_form' do |form|
      - for attribute in [:crop_x, :crop_y, :crop_w, :crop_h]
        = form.hidden_field attribute, :id => attribute

      %p
        = form.submit 'Crop'

    #fileupload
      = form_for current_user, :html => { :multipart => true } do |f|
        = f.file_field :avatar
      .fileupload-content
        %table.files

    = render 'template_upload'
