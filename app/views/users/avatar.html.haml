.avatar
  %h2= t('.title')

  .notification{:data => {:widget => 'notification'}}

  .image
    %p
      = image_tag current_user.avatar_url(:large), :id => 'cropbox', :class => 'fancybox_avatar'

    - if current_user.avatar_exists_or_able_to_download?
      = link_to t('.edit'), user_crop_path(current_user), |
                                :'data-widget' => 'edit_avatar', |
                                :'data-action' => "#{user_crop_path(current_user)}"
      = image_tag 'spin.gif', :id => 'spinner'

    #crop
      = render 'crop'

    #fileupload
      = form_for current_user, :format => :json, :html => { :multipart => true } do |f|
        = f.file_field :avatar
