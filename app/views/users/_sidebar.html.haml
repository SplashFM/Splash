#side-bar-wrap.left
  #side-bar
    = render :partial => "users/vcard", :locals => {:user => current_user}

    .points-container
      .ripples{:data => {:widget => 'ripples'}}
        %span.label RIPPLES
        %span.number= @user.ripple_count

      .splashes
        %span.label SPLASHES
        %span.number= @user.splash_count
      / .influence top 5% influencer this week
      / .last-seen last seen 8 min ago

    = render :partial => "users/relationships", :locals => {:user => @user}

    .splashers-widgets
      = render "shared/splashboard"
    = render "shared/invites"
