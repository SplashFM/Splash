#side-bar-wrap.left
  #side-bar
    = render :partial => "users/vcard", :locals => {:user => @user}

    .follow-container
      .inner
        .left.following-button
          .buttonStyle2.following
            %span
            Following
        .left.following-text
          you are already following this Splasher
        .clear
        .top_tip
    .contact-sep-shadow
    .points-container
      .ripples.left{:data => {:widget => 'ripples'}}
        %span.label.avan-bold Ripples
        %span.v-divider
        %span.number.avan-bold
          .outer
            = @user.ripple_count
            .inner
              = @user.ripple_count
      .splashes.left
        %span.label.avan-bold Splashes
        %span.v-divider
        %span.number.avan-bold
          .outer
            = @user.splash_count
            .inner
              = @user.splash_count
      / .influence top 5% influencer this week
      / .last-seen last seen 8 min ago
      .cl.border &nbsp;

    = render :partial => "follows", :locals => {:user => @user}

    .splashers-widgets
      = render "shared/splashboard"
    = render "shared/invites"
