.user-follows
  .tabs
    %ul
      %li.ui-tabs-selected
        %strong.avan-demi
          %a{:href => "#followers"}
            .relationship-count
              = user.followers.count
            .relationship-label
              = t('followers', :scope => 'users.show')
            .active_underline
      .v-space
      %li.following-count
        %strong.avan-demi
          %a{:href => "#following"}
            .relationship-count
              = user.following.count
            .relationship-label
              = t('following', :scope => 'users.show')
            .active_underline
    .line
    .cl &nbsp;

    #followers
      = render 'follows_avatar_samples', :collection => followers
      .cl.line &nbsp;
      = link_to "view more", followers_url(user), :class => 'viewmore-btn vspace fancybox'


    #following
      = render 'follows_avatar_samples', :collection => following
      .cl.line &nbsp;
      = link_to "view more", following_url(user), :class => 'viewmore-btn vspace fancybox'

    .cl.border.vspace &nbsp;