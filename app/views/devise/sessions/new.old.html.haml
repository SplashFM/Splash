%h2=t('devise.labels.sign_in')

= form_for(resource, :as => resource_name, :url => session_path(resource_name), :remote => true, :html => {:'data-type' => 'json'}) do |f|
  %p
    = f.label :email
    %br
    = f.text_field :email

  #password.hide
    %p
      = f.label :password
      %br
      = f.password_field :password

    - if devise_mapping.rememberable?
      %p
        = f.check_box :remember_me
        = f.label :remember_me

    %p.form-button
      = f.submit t('devise.buttons.login')

= render :partial => 'devise/shared/links'
%p#forgot_password.hide
  = submit_tag t("devise.buttons.password_reset")

