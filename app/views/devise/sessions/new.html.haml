- content_for(:head) do
  %style
    :sass
      #wrapper
        height: 100% !important
      #player-area
        display: none

  :javascript
    $(function () { $('.main').append(new LoginView().render().el); });

  %script#tmpl-registration{:type => 'text/x-jquery-tmpl'}
    = form_for :user, |
        :remote => true, |
        :url  => registration_path(:user), |
        :html => {:'data-type' => 'json', |
                  :class => 'register'} do |f|
      = f.text_field :email, :class => 'input', :placeholder => 'email'
      = f.text_field :name, :class => 'input', :placeholder => 'name'
      = f.password_field :password, :class => 'input', :placeholder => 'password'
      = f.password_field :password_confirmation, :class => 'input', :placeholder => 'confirm password'
      = f.submit

  %script#tmpl-sign-in{:type => 'text/x-jquery-tmpl'}
    = form_for(:user, |
        :url    => session_path(:user), |
        :remote => true, |
        :html   => {:'data-type' => 'json', |
                    :class       => 'sign-in'}) do |f|
      = f.text_field :email, :class => 'input', :placeholder => 'enter your email address...', :'data-widget' => 'user-email'
      = f.password_field :password, :class => 'input'
      = link_to t("Forgot Password?"), '#', :id => 'forgot_password'
      = f.submit t('devise.buttons.login')

  %script#tmpl-choice{:type => 'text/x-jquery-tmpl'}
    .confirm-new
      .title.hide
        Sounds good.
        %span.indent
          Happy Splashing!
      .title
        New to Splash.FM?
      .small
        A new account is being created for,
      .email.large
      .buttons
        = link_to 'Yep. Iâ€™m new', '#', :class => 'yes', :'data-widget' => 'yes'
        = link_to 'Oops. I mistyped it', '#', :class => 'no', :'data-widget' => 'no'

.user-signin
  .main
    .pulsars
      .p1.p
      .p2.p
      .p3.p
      .p4.p

  .bottom
    .wrap
      .description
        %p.title Social music discovery
        %p Share, compare and curate your listening favorites in the first music discovery community for avid listeners and taste-makers.
      .signup
        %p.title Sign Up
        %p.text Logging in with your Facebook and Twitter accounts make Splashing with friends easy.  Splash.FM finds your friends for you so you can start Splashing your newest finds with friends instantly.
        .omniauth-links
          %p.fb
            = link_to 'Sign In with Facebook', user_omniauth_authorize_path(:facebook), :'data-skip-pjax' => 'true'
          %p.tw
            = link_to 'Sign In with Twitter', user_omniauth_authorize_path(:twitter), :'data-skip-pjax' => 'true'
