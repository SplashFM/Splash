#side-bar-wrap.right
  #side-bar
    = render :partial => "users/vcard", :locals => {:user => current_user}
    = render :partial => "users/relationships", :locals => {:user => current_user}
    .splashers-widgets
      .suggested-splashers
        %a.see-all.right{:href => "#"}
          %span &bull;
          See All
        %h3 Suggested Splashers
        .cl &nbsp;
        %ul
          = render :partial => "home/suggested_splasher", :collection => current_user.suggested_users, :as => :user
        %a.viewmore-btn{:href => "#"} View More
      .top-splashboards.tabs
