:javascript
  $(function () {
    window.Friends = new FriendsView({
      appID: "#{AppConfig.facebook['key']}",
      el: $('body').get(0),
      social: #{@social.to_json}
    }).render();
  });

.invite_friends
  #stream-wrap.left
    #stream-feed
      .streamfeed-top
        .container
          .main-search{:data => {:widget => 'friend-search'}}
            %label{ :style => 'display: block' }
              = t('friends.header')
            .wrap
              .search
                %input.field{:autocomplete => "off", :name => "f", :placeholder => "Search For Friends", :type => "text"}/
          .line
      - unless @social
        %p.connect= t('friends.connect.words',
                      :link => link_to(t('friends.connect.link'),
                               user_omniauth_authorize_path('facebook'),
                               'data-skip-pjax' => true)).html_safe

      %ul.splashboard-items-live-feed.live-feed
      .loading-spinner-container

  =render "shared/sidebar"

#fb-root
