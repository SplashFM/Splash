%script#tmpl-track-summary{:type => 'text/x-jquery-tmpl'}
  %div{:class => '{{if track.splashable}}splashable{{else}}unsplashable{{/if}}', |
       :data => {:track_id => '${track.id}'}}
    .wrap
      %a.btn.right{:href => "#"}
      %strong.count.avan-bold.left ${track.splash_count}
      %a.play{:data => {:widget => 'play'}} ${track.title}
