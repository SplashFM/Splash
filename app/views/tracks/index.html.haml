= form_tag tracks_path, {:method => :get} do
  = text_field_tag :f, params[:f]
  = submit_tag 'Search'

- if @results
  - if @results.empty?
    = t '.empty'
  - else
    %ul.tracks
      - @results.each do |r|
        %li.track{:data => {:track_id => r.id}}
          = r.title
          = splash_widget(r)
