%li.track{:data => {:track_id => track.id}}
  = track.title
  = track.artist
  = play_widget(track)
  = splash_widget(track, current_user)

  - if track_expandable?(role)
    = link_to t(".expand"),
              track_path(track),
              :remote => true,
              :'data-type' => 'html',
              :'data-widget' => 'track-info-toggle'