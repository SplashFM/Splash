#side-bar-wrap.right
  #side-bar
    = render :partial => "users/vcard", :locals => {:user => current_user}
    .contact-sep-shadow
    - if defined?(omit_splashboards)
      = render "shared/invitations"
    - else
      .splashers-widgets
        .suggested-splashers
          %a.see-all.right{:href => "#"}
            %span &bull;
            See All
          %h3 Suggested Splashers
          .cl &nbsp;
          %div{:data => {:widget => 'suggested-users'}}
        = render "shared/invitations"
        = render "shared/splashboard"
    = render "shared/footer"
