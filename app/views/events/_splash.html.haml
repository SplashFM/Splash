%script#tmpl-event-splash{:type => 'text/x-jquery-tmpl'}
  %div{:class => '{{if expanded}}expanded{{/if}} {{if track.splashable}}splashable{{else}}unsplashable{{/if}}', |
      :data  => {:widget   => 'splash', |
                 :track_id => '${track.id}'}}
    %a.art.left{:href => "${track.preview_url}", :data => {:widget => 'play'}}
      %img{:alt => "", :height => "71", :src => "${track.artwork_url}", :width => "71"}/
      %span
    .entry.left
      {{if user}}
      %p.names
        %a.avan-bold{:href => "${user.url}"} ${user.nickname}
        %span ${user.name}
      {{/if}}
      %p.songname.avan-demi ${track.title}
      %p.songauthor ${track.performers}
      %ul.meta
        %li.download
          {{if track.purchase_url}}
          %a{:href => "${track.purchase_url}",
             :target => '_blank',
             :'data-widget' => 'purchase',
             :'data-skip-pjax' => true} Purchase track
          {{else}}
          %a{:href => "/undiscovered_tracks/${track.id}/download", :'data-skip-pjax' => true} Download track
          {{/if}}
        %li.comment-link
          %span &bull;
          %a{:href => "#", :data => {:widget => 'comments-count'}} ${comment_count}
        %li.time ${created_at}
    .cl &nbsp;
    .numbers
      .the_splash_count ${track.splash_count}
    = render 'shared/splash_action'
    {{if expanded}}
    .container{:data => {:widget => 'more-info'}}
      .left{:data => {:widget => 'thumbnails'}}
      .aside.left
        .shares
          .right.facebook
            %a{ :name => 'fb_share', :type => 'button', :share_url => "${track.preview_url}" }
            <script src="http://static.ak.fbcdn.net/connect.php/js/FB.Share" type="text/javascript">
            {{html "</scr" + "ipt>" }}
          .right.twitter
            %a{ :href => "https://twitter.com/share", :class => "twitter-share-button", :data => {:url => "${track.preview_url}", :text => "${track.preview_url}", :count => 'none', :via => 'splashfm', :target => '_blank' } }
              Tweet
              <script>
              !function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");
              {{html "</scr" + "ipt>" }}
          .clear
          .arrow
        {{if track.download_url}}
        %a.report-song.right{:data => {:widget => 'flag'}} Report song
        {{/if}}
        {{if user}}
        %p.author
          %em Splashed by
          %a.avan-bold{:href => "${user.url}"} ${user.nickname}
        {{/if}}
        .cl &nbsp;
        %span.comments-module-t
        .scroll-area
          %ul{:data => {:widget => 'comments'}}
      / /aside
      .write-comment
        %form{:action => "#", :method => "post", :data => {:widget => 'comment-box'}}
          %textarea{:type => "textarea", :placeholder => "Write a comment...", :class => 'expand comment-text-area', :data => {:widget => 'comment-text-area'}}
    {{/if}}
    / /container
  / /row